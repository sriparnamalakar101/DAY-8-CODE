#include <stdio.h>
#include <math.h>  // for sqrt()

int main() {
    float a, b, c;        
    float s, area, perimeter;

    
    printf("Enter three sides of the triangle: ");
    scanf("%f %f %f", &a, &b, &c);

    if ((a + b > c) && (a + c > b) && (b + c > a)) {
        perimeter = a + b + c;

       
        s = perimeter / 2;

     
        area = sqrt(s * (s - a) * (s - b) * (s - c));

        
        if (fabs(area - perimeter) < 0.0001)  // using fabs to handle float precision
            printf("The triangle is an EQUABLE triangle.\n");
        else
            printf("The triangle is NOT an equable triangle.\n");

      printf("Perimeter = %.2f\n", perimeter);
        printf("Area = %.2f\n", area);
    } 
    else {
        printf("The entered sides do not form a valid triangle.\n");
    }

    return 0;
}
