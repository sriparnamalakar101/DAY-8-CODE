#include <stdio.h>

int main() {
    float weight, charge = 0.0;

    // Input weight from user
    printf("Enter the weight of the parcel (in Kg): ");
    scanf("%f", &weight);

    // Calculate charge based on weight
    if (weight <= 10)
        charge = weight * 30;
    else if (weight <= 30)
        charge = (10 * 30) + ((weight - 10) * 20);
    else
        charge = (10 * 30) + (20 * 20) + ((weight - 30) * 15);

    // Display the result
    printf("Total charge for %.2f Kg parcel = Rs. %.2f\n", weight, charge);

    return 0;
}
